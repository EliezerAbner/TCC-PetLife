<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetLifeApp.MainPage"
             BackgroundColor="White">

    <StackLayout>
        <Label x:Name="lbl"
               Text="DEU BOM POHA"
               IsVisible="False"
               TextColor="Black"
               FontSize="25"/>

        <Button Text="Testar Conexão"
                CornerRadius="30"
                x:Name="bt"/>

        <Label x:Name="teste"
               IsVisible="True"
               TextColor="Black"
               FontSize="25"/>
        <Button Text="Alimentador" BackgroundColor="Orange" CornerRadius="15" x:Name="Alimentador" Clicked="Alimentador_Clicked"/>
    </StackLayout>

</ContentPage>
