<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetLifeApp.Views.PageAlimentador"
             Title="Alimentadores">

    <ScrollView>
        <StackLayout Margin="10" Orientation="Vertical" HorizontalOptions="CenterAndExpand">
            <StackLayout>
                <Image Source="pote_racao1.png" Aspect="AspectFill" WidthRequest="300" HeightRequest="300" />
            </StackLayout>

            <ListView x:Name="listaAlimentadores" SeparatorColor="Gray">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell Text="{Binding Name}"
                                   Detail="{Binding Status}"
                                   ImageSource="pote_racao"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ScrollView>
</ContentPage>